<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blueWhale"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_height="56dp"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:scaleType="center"
            android:src="@drawable/ic_close_menu" />
        <!--style="@style/ImageView.Hamburger"-->
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_home"
            style="@style/guillotineItemLayout">

            <ImageView
                style="@style/guillotineImageView"
                android:src="@drawable/ic_home" />

            <TextView
                style="@style/guillotineTextView"
                android:text="Home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_profile"
            style="@style/guillotineItemLayout">

            <ImageView
                style="@style/guillotineImageView"
                android:src="@drawable/i_profile" />

            <TextView
                style="@style/guillotineTextView"
                android:text="Profile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_favorites"
            style="@style/guillotineItemLayout">

            <ImageView
                style="@style/guillotineImageView"
                android:src="@drawable/ic_favourites" />

            <TextView
                style="@style/guillotineTextView"
                android:text="Favorites" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_settings"
            style="@style/guillotineItemLayout">

            <ImageView
                style="@style/guillotineImageView"
                android:src="@drawable/ic_settings" />

            <TextView
                style="@style/guillotineTextView"
                android:text="Settings" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_spread_the_word"
            style="@style/guillotineItemLayout">

            <ImageView
                style="@style/guillotineImageView"
                android:src="@drawable/ic_share" />

            <TextView
                style="@style/guillotineTextView"
                android:text="Spread The Word" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>