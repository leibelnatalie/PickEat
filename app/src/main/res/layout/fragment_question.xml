<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="pickeat.com.pickeat.ui.fragments.QuestionFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_q_1"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/question_side_padding"
        android:paddingStart="@dimen/question_side_padding">

        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/questionTitle"
            android:layout_centerVertical="true"
            android:paddingStart="0dp"
            android:paddingEnd="63dp"
            android:text="How do you feel about \nre-living the 60's in an \nAmerican diner?"/>


        <RelativeLayout
            android:id="@+id/question_layout_1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/questions_white_layout"
            android:layout_below="@+id/question_title">

            <TextView
                android:id="@+id/question_text_1"
                style="@style/questionText"/>

            <ImageView
                android:id="@+id/question_answered_img_1"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkmark"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question_layout_2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/questions_white_layout"
            android:layout_below="@+id/question_layout_1">

            <TextView
                android:id="@+id/question_text_2"
                style="@style/questionText"/>

            <ImageView
                android:id="@+id/question_answered_img_2"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkmark"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question_layout_3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/questions_white_layout"
            android:layout_below="@+id/question_layout_2">

            <TextView
                android:id="@+id/question_text_3"
                style="@style/questionText"/>

            <ImageView
                android:id="@+id/question_answered_img_3"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkmark"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question_layout_4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/questions_white_layout"
            android:layout_below="@+id/question_layout_3">

            <TextView
                android:id="@+id/question_text_4"
                style="@style/questionText"/>

            <ImageView
                android:id="@+id/question_answered_img_4"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkmark"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
